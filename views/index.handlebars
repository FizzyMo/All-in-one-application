<div class="wrapper">
  <div class="inner">
    <div class="highlights">
      <div class="content">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="task-name">What is the name of your task?</label>
            <input type="text" id="task-name" class="form-control" aria-describedby="task-name"
              placeholder="Enter A Task">
          </div>
          <div class="form-group">
            <label for="task-description">Task Description</label>
            <textarea class="form-control" id="task-description" aria-describedby="task-description"
              placeholder="Enter Your Task's Description"></textarea>
          </div>
          <div class="form-group">
            <label for="task-time">What time do you need to acomplish your task?</label>
            <input type="text" id="task-time" class="form-control" aria-describedby="task-time"
              placeholder="Enter A Time">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

        <h3>Tasks List:</h3>
        <ul id="task-list" class="list-group">
          {{#each Task}}
          <div class="content">
            <header>
              <h3><span class="label">Task Name:</span><h2> {{this.Task}} </h2></h3>
              <h3><span class="label">Task Description:</span><h2> {{this.TaskDescription}} </h2></h3>
              <h3><span class="label">Task Time:</span><h2> {{this.TaskTime}} </h2></h3>
            </header>
          </div>
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="api/tasks/{{this.id}}">Update Your Task{{this.text}}</a>
            <button data-id="{{this.id}}" class="btn btn-danger float-right delete">X</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>